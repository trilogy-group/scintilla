# =============================================================================
# Scintilla Environment Variables Template
# =============================================================================
# INSTRUCTIONS: Rename this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://scintilla:scintilla_dev@localhost:5432/scintilla

# =============================================================================
# LLM API Keys (Required)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# LLM Default Settings
# =============================================================================
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_OPENAI_MODEL=gpt-4o
DEFAULT_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# AWS Configuration (Required for Production)
# =============================================================================
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=your_kms_key_id_here

# =============================================================================
# Authentication & Security
# =============================================================================
ALLOWED_DOMAINS=ignitetech.com,ignitetech.ai
JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=true
LOG_LEVEL=INFO
API_PORT=8000 